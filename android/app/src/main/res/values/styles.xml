<resources>

    <!-- A ShapeAppearance overlay that makes a fully-rounded "pill" -->
    <style name="ShapeAppearance.MyPill"
        parent="ShapeAppearance.Material3.Corner.None">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Style for BottomNavigationView active indicator (the little pill) -->
    <style name="Widget.My.BottomNav.ActiveIndicator"
        parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">56dp</item>
        <item name="android:height">6dp</item>
        <item name="backgroundTint">@color/nav_indicator</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.MyPill</item>
    </style>

</resources>
