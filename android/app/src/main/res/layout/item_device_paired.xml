<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="70:A8:D3:A4:A3:2A"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnToggle"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_btn"
                android:contentDescription="Toggle"
                android:src="@drawable/ic_bolt" />

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp" />

            <ImageButton
                android:id="@+id/btnDisconnect"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_icon_btn_red"
                android:contentDescription="Disconnect"
                android:src="@drawable/ic_close" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
