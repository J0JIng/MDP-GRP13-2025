<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".ui.bluetooth.BluetoothFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Top bar -->
        <TextView
            android:id="@+id/titleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MDP Group 13"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0F6E75"
            android:paddingBottom="8dp" />

        <!-- Status row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <TextView
                android:id="@+id/textView_bluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth Status: Not Connected"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#D93025" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- optional power toggle placeholder; wire later if you like -->
            <Switch
                android:id="@+id/switchBluetooth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bluetooth" />
        </LinearLayout>

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/button_scan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/button_scan"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#1AA6AF"
                android:drawableStart="@drawable/ic_bluetooth_black_24dp"
                android:drawablePadding="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />

            <Space
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/button_stop_scan"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Stop Scanning"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:backgroundTint="#0F6E75"
                android:drawableStart="@drawable/ic_messages_black_24dp"
                android:drawablePadding="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp" />
        </LinearLayout>

        <!-- Center animation + scanning progress -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:foregroundGravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieScan"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/bluetooth_scan" />

            <ProgressBar
                android:id="@+id/progressAvailable"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Lists row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="top">

            <!-- Available devices -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_available"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E6E6E6" />

                    <ListView
                        android:id="@+id/lvAvailable"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:divider="#EAEAEA"
                        android:dividerHeight="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Paired devices -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvPaired"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_paired"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="6dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E6E6E6" />

                    <ListView
                        android:id="@+id/lvPaired"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:divider="#EAEAEA"
                        android:dividerHeight="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
